{
	"name": "@sylphx/leaf",
	"version": "0.1.0",
	"type": "module",
	"private": true,
	"workspaces": [
		"packages/*",
		"examples/*",
		"docs"
	],
	"scripts": {
		"dev": "bun --filter examples/docs dev",
		"build": "bun run --filter './packages/*' build",
		"test": "vitest",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release:new": "bun run build && changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.4",
		"@changesets/cli": "^2.29.7",
		"@mdx-js/react": "^3.1.1",
		"@playwright/test": "^1.56.1",
		"@types/bun": "^1.3.1",
		"playwright": "^1.56.1",
		"sharp": "^0.34.5",
		"typescript": "^5.9.3",
		"vitest": "^4.0.8"
	},
	"dependencies": {
		"rehype-raw": "^7.0.0"
	},
	"overrides": {
		"js-yaml": "^4.1.0",
		"glob": "^10.5.0"
	}
}
