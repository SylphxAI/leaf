{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext"],
		"outDir": "./dist",
		"rootDir": "./src",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"moduleResolution": "bundler",
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
