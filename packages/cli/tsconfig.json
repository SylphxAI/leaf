{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"module": "ESNext",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"noEmit": false,
		"allowImportingTsExtensions": false,
		"verbatimModuleSyntax": false,
		"moduleResolution": "bundler",
		"skipLibCheck": true
	},
	"references": [{ "path": "../core" }],
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
